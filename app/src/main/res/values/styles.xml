<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Design.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorPrimary
        </item><!-- 何も入力してないとき入力フォーム内のHintの色 --><!-- 通常時EditTextの下線 -->
        <item name="colorControlActivated">@color/colorPrimary</item><!-- フォーカス時の下線の色 -->
    </style>

    <style name="MyTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/element_spacing_small</item>
        <item name="android:theme">@style/AppTheme.Design.TextInputLayout</item>

    </style>

</resources>
